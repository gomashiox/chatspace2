.notice
  %p.notice__text ログインしました

.wrapper
  .side-bar
    .side-bar-header
      .user-info
        %p.user-info__name user-name
        %ul.edit
          %li.edit__create-group
            %a
              = fa_icon "cog 2x "
          %li.edit__user
            %a
              = fa_icon "edit 2x "

    .side-bar-groups
      .group-info
        %a
          %p.group-name groupA
          %p.group-message messageA-1
      .group-info
        %a
          %p.group-name groupB
          %p.group-message messagrB-1


  .chat
    .chat-header
      .header-left
        %p.current-group-name group-name
        %p.current-group-members members
      .header-right
        %a.header-right__edit edit

    .chat-body
      = render partial: "messages"
    .chat-footer
      .form
        %form
          .input-box
            %input.input-box__text{ type: "text", placeholder: "type a message"}
            %label.input-box__image
              = fa_icon("image")
              %input.input-box__file-send{type: "file"}
          %button.form__send-btn{type: "submit",} Send

